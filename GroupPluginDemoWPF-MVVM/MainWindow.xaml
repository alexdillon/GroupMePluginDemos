<Window x:Class="GroupPluginDemoWPF_MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupPluginDemoWPF_MVVM"
        mc:Ignorable="d"
        FontSize="14"
        FontFamily="Segoe UI"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Basically the same as the other WPF Demo, but data logic and display are seperated with MVVM" />
        <Label Grid.Row="1" Content="{Binding Name}" />
        <Label Grid.Row="2" Content="{Binding SomeGeneratedString}" />
    </Grid>
</Window>
